{
  "name": "dynamic-nft-ticketing",
  "version": "1.0.0",
  "description": "Dynamic NFT Ticketing System with QR Validation",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy:mumbai": "npx hardhat run scripts/deploy.js --network mumbai",
    "verify": "npx hardhat verify --network mumbai",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "backend:deploy": "cd backend && firebase deploy",
    "setup": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "test-setup": "node test-setup.js"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1"
  }
}